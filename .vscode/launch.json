{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python 调试程序: Flask",
            "type": "debugpy",
            "request": "launch",
            "module": "flask",
            "pythonPath": "${workspaceFolder}/.venv/bin/python",
            "env": {
                "FLASK_APP": "app.py",
                "FLASK_RUN_PORT": "8000",
                "FLASK_DEBUG": "1"
            },
            "args": [
                "run",
                "--debug"
            ],
            "jinja": true,
            "console": "integratedTerminal",
            "justMyCode": true,
            "autoStartBrowser": false,
            "envFile": "${workspaceFolder}/.env"  // 指定 .env 文件路径
        }
    ]
}